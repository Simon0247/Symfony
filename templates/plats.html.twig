{% extends "base.html.twig"%}

{% block body %}

	<main class="" container>
		<section class="" row>
			<div class="col-12 p-0">
				<img src="/media/bg2.jpeg" class="img-fluid w-100 h-auto "/>
				<h1>Liste des Plats<h1>
						<div class="row">

							{% for Plat in liste %}
								<div class="col-4 text-center p-4">
									<img src="{{ asset('/media/food/')}}{{Plat.image}}" class="img-fluid object-fit-cover"/>
									<br/>
									{{ Plat.libelle}}
									<br>
									<a href="{{ path('panier_add', { 'plat': Plat.id }) }} "class="btn btn-outline-danger ">Ajouter au Panier</a>
								</div>
							{% endfor %}
						</div>
					</section>
				</main>
			{% endblock %}
